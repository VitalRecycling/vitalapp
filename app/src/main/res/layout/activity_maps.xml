<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/location_Search"
            android:layout_width="314dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/Serching_address"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="29dp"
            android:layout_toStartOf="@+id/Serching_address"
            android:ems="10"
            android:foregroundTint="#272424"
            android:hint="Search Location..."
            android:textColorHint="@android:color/darker_gray" />


        <ImageButton
            android:id="@+id/Serching_address"
            style="@android:style/Widget.Holo.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="onClick"
            android:src="@android:drawable/ic_menu_search" />

    </RelativeLayout>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="60dp"
        tools:context=".MapsActivity" />

    <RelativeLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>

    <Button
        android:id="@+id/CashButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/map"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#64DA86"
        android:background="@drawable/button_bg_rounded_corners"
        android:onClick="onClick"
        android:text="Cash" />

    <Button
        android:id="@+id/recycleButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/map"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/CashButton"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#64DA86"
        android:background="@drawable/button_bg_rounded_corners"
        android:onClick="onClick"
        android:text="Recycle" />

</RelativeLayout>

